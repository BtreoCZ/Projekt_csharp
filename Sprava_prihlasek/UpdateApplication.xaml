<Window x:Class="Sprava_prihlasek.UpdateApplication"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sprava_prihlasek"
        mc:Ignorable="d"
        Title="UpdateApplication" Height="450" Width="800">
    <Grid Background="#FFF0F8FF">
        <StackPanel Margin="50">

            <Label Content="Status:" FontSize="14" Margin="0,0,0,5"/>
            <ComboBox x:Name="Status" Margin="0,0,0,20">
                <ComboBoxItem Content="Čekající"/>
                <ComboBoxItem Content="Přijat"/>
                <ComboBoxItem Content="Odmítnut"/>
            </ComboBox>
            <Button Content="Zrušit"
                     Width="202" Height="45" Margin="0,30,0,0"
                    Click="Cancel"
                   />
            <Button Content="Aktualizovat"
                     Width="204" Height="49" Margin="0,30,0,0" Click="Update"
                    />
        </StackPanel>
    </Grid>
</Window>
