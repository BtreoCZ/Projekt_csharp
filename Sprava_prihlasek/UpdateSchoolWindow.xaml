<Window x:Class="Sprava_prihlasek.UpdateSchoolWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sprava_prihlasek"
        mc:Ignorable="d"
        Title="UpdateSchoolWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="Nazev" HorizontalAlignment="Center" Margin="0,80,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="Mesto" HorizontalAlignment="Center" Margin="0,150,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="Adresa" HorizontalAlignment="Center" Margin="0,220,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <Label Content="Nazev" HorizontalAlignment="Left" Margin="340,54,0,0" VerticalAlignment="Top" FontSize="16"/>
        <Label Content="Mesto" HorizontalAlignment="Left" Margin="340,124,0,0" VerticalAlignment="Top" FontSize="16"/>
        <Label Content="Adresa" HorizontalAlignment="Left" Margin="340,194,0,0" VerticalAlignment="Top" FontSize="16"/>
        <Button Content="Aktualizovat" HorizontalAlignment="Center" Margin="0,357,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.475,0.597" Height="44" Width="120" Click="UpdateSchool"/>
        <Button Content="Zrušit" HorizontalAlignment="Center" Margin="0,289,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.475,0.597" Height="44" Width="120" Click="Button_Click"/>

    </Grid>
</Window>
